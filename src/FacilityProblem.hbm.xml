<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

		<hibernate-mapping package="src.main.java.FacilitySystem">
		<class name="src.main.java.FacilitySystem.FacilityProblems" table="facilityproblems">
			<id name="id" column="id">
				<generator class="identity" />
			</id>
			<property name="current" type="boolean" column="current"/>
			<property name="description" type="string" column="description"/>
			<property name="date" type="calendar" column="date"/> 

			<many-to-one name="facility" column="facilityid" class="src.main.java.FacilitySystem.Facility" cascade="save-update, delete"></many-to-one>
		</class>	
	</hibernate-mapping>