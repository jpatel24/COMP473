<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="src.main.java.FacilitySystem">
	<class name="src.main.java.FacilitySystem.MaintenanceRequest" table="maintenancerequest">
		<id name="id" column="id">
			<generator class="identity" />
		</id>
		<property name="current" type="boolean" column="current" />
		<property name="description" type="string" column="description" />
		<!--<id name="cost" type="int" column="cost"/> -->
		<property name="date" type="calendar" column="date" />
		<property name="estCost" type="double" column="estimatedcost" />
		<many-to-one name="facility" class="src.main.java.FacilitySystem.Facility"  cascade="save-update, delete" column="facilityid"></many-to-one>
		
			
		<bag lazy="false" name="maintenances" table="maintenance"  cascade="save-update, delete">
			<key>
				<column name="maintreqid" not-null="true"></column>
			</key>
		<one-to-many  class="src.main.java.FacilitySystem.Maintenance" />
		
		</bag>
		</class>
</hibernate-mapping>