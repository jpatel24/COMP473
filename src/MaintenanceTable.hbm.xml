<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="src.main.java.FacilitySystem.dal">
	<class name="src.main.java.FacilitySystem.Maintenance" table="maintenance">
		<id name="id" column="id">
		<generator class="identity">
			</generator>
		</id>
		<many-to-one name="maintenanceRequest" class="src.main.java.FacilitySystem.MaintenanceRequest" fetch="select" cascade="save-update, delete" column="maintreqid"></many-to-one>
		<property name="completed" type="boolean" column="completed" />
		<property name="description" type="string" column="description" />
		<!--<id name="cost" type="int" column="cost"/> -->
		<property name="date" type="calendar" column="date" />
<!-- 		<property name="maintreqId" type="int" column="maintreqid"></property>
 -->		
	</class>
</hibernate-mapping>